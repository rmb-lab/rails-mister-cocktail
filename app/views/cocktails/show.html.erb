<div class="container">

<h2><%= @cocktail.name %></h2>

<div class="card-mixture">
  <h5>Mixture</h5>

  <!-- Ingredient list -->
    <% if @cocktail.doses.empty? %>
      <p>Empty recipe
      </p>
    <% else %>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> <strong> <%= dose.ingredient.name %> </strong>
          <%= link_to "Delete", cocktail_dose_path(dose), method: :delete  %>
        </li>
        <% end %>
      </ul>
    <% end %>

  <br>

  <!-- Add Ingredient -->
  <%= link_to new_cocktail_dose_path(@cocktail)  do %>
    <i class="far fa-plus-square"></i> Add an ingredient
  <% end %>
</div>

<br>

<div class="footer">
  <%= link_to cocktails_path  do %>
    <i class="fas fa-chevron-left"></i>
  <% end %>
</div>

</div>
