<h2>Add a Mixture for <%= @cocktail.name %></h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all.order(:name), prompt: "Choose from the list" %>
  <%= f.submit "Add ingredient", class: "btn btn-primary" %>
<% end %>

<%= link_to cocktails_path  do %>
  <i class="fas fa-chevron-left"></i>
<% end %>
